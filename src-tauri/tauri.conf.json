{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "identifier": "com.screen.reminder",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "Screen Reminder",
        "width": 400,
        "height": 500,
        "decorations": false,
        "transparent": false,
        "resizable": false,
        "visible": true
      }
    ]
  }
}